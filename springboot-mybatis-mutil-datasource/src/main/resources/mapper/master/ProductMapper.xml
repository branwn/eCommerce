	<select id="findById" resultMap="BaseResultMap" parameterType="java.lang.Long">
		select
		<include refid="Base_Column_List" />
		from product
		where product_id like #{productId}
	</select>

	<select id="listAll" resultMap="BaseResultMap" parameterType="java.lang.String">
		select
		<include refid="Base_Column_List" />
		from product
	</select>

	<insert id="saveProductById" parameterMap="Product" useGeneratedKeys="true" keyProperty="id">
		insert into
			product(product_id, product_onsale, threshold_price, equivalent_price, product_quantity)
		values
			(#{productId},#{productOnsale},#{thresholdPrice},#{equivalentPrice},#{productQuantity})
	</insert>


